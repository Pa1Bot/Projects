<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptops</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body class="container">
    <section>
        
        <form action="/" method="post">
            <h1>Laptops</h1>
        <label for="dellLaptop">Dell Laptop($700):</label>
        <input type="number" name="dellLaptop" id="dellLaptop">
        <label for="hpLaptop">Hp Laptop($600):</label>
        <input type="number" name="hpLaptop" id="hpLaptop">
        <br>
        <h2>Customer Information</h2>
            <label for="name">Name:</label>
            <input type="text" name="name" id="name">
            <br>
            <label for="address">Address:</label>
            <input type="text" name="address" id="address">
            <br>
            <label for="city">City:</label>
            <Select name="city" id="city">
                <option value=""></option>
                <option value="Toronto">Toronto</option>
                <option value="BC">BC</option>
                <option value="Montreal">Montreal</option>
            </Select>
            <br>
            <label for="province">Province:</label>
            <select name="province" id="province">
                <option value=""></option>
                <option value="ON">ON</option>
                <option value="Vancouver">Vancouver</option>
                <option value="Quebec">Quebec</option>
            </select>
            <br>
            <label for="phone">Phone Number:</label>
            <input type="text" name="phone" id="phone">
            <br>
            <label for="email">Email:</label>
            <input type="text" name="email" id="email">
            <br>
            <button type="submit">Submit</button>    
        </form>
        <div>
            <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
                <div class="error-message">
                    <% for (var error of errors) { %>
                        <p id="errors"><%= error.msg %></p>
                    <% } %>
                </div>
            <% } %>
        </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script type="javascript" src="js/form.js"></script>
</body>

</html>